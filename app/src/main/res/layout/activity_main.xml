<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/main_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/difficulty_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/button_level_1"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            android:id="@+id/difficulty_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1" />

        <RadioButton
            android:id="@+id/difficulty_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 2" />

        <RadioButton
            android:id="@+id/difficulty_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 3" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>